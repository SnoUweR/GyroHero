{
   "version": "0.1.0",
    "tasks": [
        {
        "taskName": "linux",
        "command": "g++",
        "args": [
            "-Wl -z -relro -lcurl -lcurlpp",
            "daemon.cpp"
        ],
        "isShellCommand": true,
        "showOutput": "always",
        "problemMatcher": {
            "owner": "cpp",
            "fileLocation": [
                "relative",
                "${workspaceRoot}"
            ],
            "pattern": {
                "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                "file": 1,
                "line": 2,
                "column": 3,
                "severity": 4,
                "message": 5
            }
        },
        "group": {
            "kind": "build",
            "isDefault": true
        }
    }],    
}
